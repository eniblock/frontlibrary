{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "types": [
      "node",
      "lodash"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@eniblock/ui/layout": [
        "projects/eniblock/layout"
      ],
      "@eniblock/ui/navigation": [
        "projects/eniblock/navigation"
      ],
       "@eniblock/ui/data-list": [
        "projects/eniblock/data-list"
      ],
      "eniblock": [
        "dist/eniblock"
      ],
      "xdev-lib": [
        "dist/xdev-lib/xdev-lib",
        "dist/xdev-lib"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
